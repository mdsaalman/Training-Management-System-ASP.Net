
@model IEnumerable<CourseEnroll.Models.CoursePayment>

@{
    ViewData["Title"] = "Payment Details";
}

<h1>Payment Details</h1>

<div>
    <h4>Course Payment</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
           Student Name
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Student.Name
        </dd>
        <dt class="col-sm-2">
            Student Mobile
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Student.Mobile
        </dd>
    </dl>
</div>

<div class="col-md-6">
    <h4>Course List</h4>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>

                <th style="text-align:center;">
                    Course Name
                </th>
                <th style="text-align:center;">
                    Course Duration
                </th>
                <th style="text-align:center;">
                    Course Fee
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Course)
            {

                <tr>
                    <td style="text-align:center;">
                        @(item.Name)
                    </td>
                    <td style="text-align:center;">
                        @item.CourseDuration
                    </td>
                    <td style="text-align:center;">
                        @String.Format("{0:###0.00}", item.CourseFee)
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <h4>Payment List</h4>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>

                <th style="text-align:center;">
                    @Html.DisplayNameFor(model => model.RefNo)
                </th>
                <th style="text-align:center;">
                    @Html.DisplayNameFor(model => model.PaymentDate)
                </th>
                <th style="text-align:center;">
                    @Html.DisplayNameFor(model => model.PayAmount)
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                decimal total = 0;
            }
            @foreach (var item in Model)
            {
                total += item.PayAmount;
                <tr>

                    <td style="text-align:center;">
                        @Html.DisplayFor(modelItem => item.RefNo)
                    </td>
                    <td style="text-align:center;">
                        @Html.DisplayFor(modelItem => item.PaymentDate)
                    </td>
                    <td style="text-align:center;">
                        @Html.DisplayFor(modelItem => item.PayAmount)
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2" style="text-align:right;">Total=</th>
                <th style="text-align:center;">@String.Format("{0:###0.00}", total) </th>
            </tr>
        </tfoot>
    </table>
</div>

<div>  
    <a asp-action="Index">Back to List</a>
</div>
